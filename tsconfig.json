   // tsconfig.json

   {
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "lib": ["dom", "es2016", "esnext.asynciterable"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": true
    },
    "include": ["./src/**/*"]
  }